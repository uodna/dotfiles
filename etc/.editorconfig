root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.md]
trim_trailing_whitespace = false

# Go
[*.go]
indent_style = tab
indent_size = 4

# Python
[*.py]
indent_size = 4

# Rust
[*.rs]
indent_size = 4

# Java
[*.java]
indent_style = tab
